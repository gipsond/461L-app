<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="horizontal"
        android:weightSum="1.0"
        tools:context="com.google.android.gms.maps.SupportMapFragment">

        <EditText
            android:id="@+id/CompanyDomainName"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_weight=".25"
            android:paddingStart="4dp"
            android:background="@color/colorPrimary"
            android:ems="10"
            android:textColor="@color/buttonLabel"
            android:hint="Enter Company url (e.g microsoft.com)"
            android:inputType="textPersonName"
            android:textColorHint="@color/buttonLabel"
            android:textSize="14sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight=".75"
            android:onClick="onClickInfo"
            android:text="Search"
            style="@style/mainmenubutton"
            android:paddingStart="12dp"
            android:textSize="15dp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/CompanyInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:gravity="top"
        android:text="Enter a url in the text field to search for company infomation."
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/CompanyName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:gravity="top"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/CompanyLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:gravity="top"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/CompanyWebSite"
        android:autoLink="all"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:gravity="top"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/CompanyTwitter"
        android:autoLink="all"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:gravity="top"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/CompanyLinkedIn"
        android:autoLink="all"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:gravity="top"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/CompanyBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@color/colorPrimary"
        android:gravity="top"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/CompanyLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary" />

</LinearLayout>

